<!-- Product Item Layout -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="300dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="10dp">

    <!-- FrameLayout to overlay wishlist icon on the image -->
<FrameLayout
android:layout_width="match_parent"
android:layout_height="150dp">  <!-- Fixed height -->

<!-- Product Image -->
<ImageView
    android:id="@+id/product_image_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scaleType="centerCrop"
    android:src="@drawable/shopping_cart_icon" />

<!-- Wishlist Icon (Positioned at top-right) -->
<ImageButton
    android:id="@+id/wishlist_icon"
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:layout_gravity="top|end"
    android:background="?attr/selectableItemBackgroundBorderless"
    android:src="@drawable/ic_wishlisti"
    android:padding="5dp"
    android:contentDescription="Add to Wishlist" />

</FrameLayout>

    <TextView
        android:id="@+id/product_name"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        android:maxLines="2"
        android:text="Product 1"
        android:textSize="14sp"
        android:textStyle="bold" />


<!--    <TextView-->
<!--android:id="@+id/product_name"-->
<!--android:layout_width="match_parent"-->
<!--android:layout_height="wrap_content"-->
<!--    android:text="Product 1"-->
<!--    android:textSize="14sp"-->
<!--    android:textStyle="bold"-->
<!--    android:layout_marginTop="10dp"-->
<!--    android:gravity="center"/>-->

<TextView
android:id="@+id/product_price"
android:layout_width="match_parent"
android:layout_height="wrap_content"
    android:text="$19.99"
    android:textSize="14sp"
    android:layout_marginTop="5dp"
    android:gravity="center"/>


<Button
android:id="@+id/addToCartButton"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="@color/orange"
android:text="Add to cart"
android:layout_marginTop="10dp"
android:layout_marginEnd="5dp"/>
    </LinearLayout>












